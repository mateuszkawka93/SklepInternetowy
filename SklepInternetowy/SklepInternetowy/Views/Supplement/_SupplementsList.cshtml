@model IEnumerable<SklepInternetowy.Models.Supplement>
@using SklepInternetowy.Infrastructure





@foreach (var products in Model)
{
    <div class="col-md-4 thumbnail" style="overflow: hidden">

        <a class="cartIcon" href="@Url.Action("AddToCart", "Cart", new {id = products.SupplementId})">
            <img src="@Url.Content("~/Content/Images/cart.png")">
        </a>

        <a class="details-link" href="@Url.Action("Details", "Supplement", new {id = products.SupplementId})">
            <img class="product-img" src="@Url.ProductsPicturePath(products.ImageFileName)">
            <h1>
                @products.Producer - @products.Name
            </h1>
        </a>

    </div>
}